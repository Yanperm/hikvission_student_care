# Environment Configuration Template
# คัดลอกไฟล์นี้เป็น .env และกรอกค่าจริง
# cp .env.example .env

# Database Configuration
USE_RDS=false
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_USER=admin
DB_PASSWORD=change-this-password
DB_NAME=studentcare
DB_PORT=3306

# Application Configuration
SECRET_KEY=change-this-to-random-string
DEBUG=False
PORT=5000

# Cloud API
CLOUD_API_URL=http://localhost:8080

# AWS Configuration (Optional)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here

# LINE OA Configuration (Optional)
LINE_CHANNEL_ACCESS_TOKEN=your-line-token-here
LINE_CHANNEL_SECRET=your-line-secret-here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key-here
SMS_API_SECRET=your-sms-secret-here

